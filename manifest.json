{
  "manifest_version": 3,
  "name": "Ad Analyzer",
  "version": "1.0",
  "description": "Analyzes ads on web pages with highlighting and captures auction details",
  "permissions": [
    "activeTab",
    "webRequest",
    "debugger"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": ["*.map"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "devtools_page": "openrtb_devtools.html",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Ad Analyzer"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}