{
  "manifest_version": 3,
  "name": "Ad Highlighter",
  "version": "1.0",
  "description": "Highlights ads on web pages with a red border",
  "permissions": [
    "activeTab"
  ],
  "web_accessible_resources": [
    {
      "resources": ["*.map"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Ad Highlighter"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}